<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnStartTask1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/btn_text_task1"
        android:onClick="startTask1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStartTask2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="startTask2"
        android:text="@string/btn_text_task2"
        app:layout_constraintEnd_toEndOf="@+id/btnStartTask1"
        app:layout_constraintStart_toStartOf="@+id/btnStartTask1"
        app:layout_constraintTop_toBottomOf="@+id/btnStartTask1" />

    <Button
        android:id="@+id/btnStartTask3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="startTask3"
        android:layout_marginBottom="100dp"
        android:text="@string/btn_text_task3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnStartTask2"
        app:layout_constraintStart_toStartOf="@+id/btnStartTask2"
        app:layout_constraintTop_toBottomOf="@+id/btnStartTask2"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>